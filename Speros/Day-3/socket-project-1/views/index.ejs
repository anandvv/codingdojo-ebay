<html>
<head>
    <title>Sockets</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.dev.js"></script>
    <script type ="text/javascript">
        $(document).ready(function (){
    
            name = prompt("Please enter first name");
            console.log(name);

            var socket = io(); //1
    
            socket.on('serverMessage', function (data) { //4
                $('#canvas').html("<h1>"+ data.first_name +"</h1>");

            });

            $('#callServerButtonAlpha').click(function(event){
                console.log('alpha')
                socket.emit('alpha')
            })

            $('#callServerButtonBeta').click(function(event){
                console.log('beta')
                socket.emit('beta')
            })

            $('#callServerButtonGamma').click(function(event){
                console.log('gamma')
                socket.emit('gamma')
            })

            // $("#box").html("<h1>Hello wrold" + obj.name + "hello</h1>")

            $('#myForm').submit(function(){
                socket.emit('alpha', {
                    first_name: $('#first_name').val(),
                    last_name: $('#last_name').val(),
                })
                socket.emit('alpha',  { x: 5, y :10} )
                return false;
            })
            $('#myForm').styles

         })
    </script>
</head>
<body>
    <h1>Fun with sockets</h1>  
    <button id='callServerButtonAlpha'>Call Server Alpha</button>
    <button id='callServerButtonBeta'>Call Server Beta</button>
    <button id='callServerButtonGamma'>Call Server Gamma</button>

    <div id="canvas" > </div>

    <form id='myForm'>
        <input type="text" id="first_name">
        <input type="text" id="last_name">
        <input type="submit">
    </form>
</body>
</html>